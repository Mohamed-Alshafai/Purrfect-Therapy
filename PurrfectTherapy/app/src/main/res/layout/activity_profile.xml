<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A23CB5"
            android:backgroundTint="@color/teal_700"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:navigationIcon="@drawable/catlogosmol"

            app:navigationIconTint="#EFEEEE"
            app:title="Purrfect Therapy"
            app:titleCentered="true" />


        <!-- Category Buttons -->

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/editTextMyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Email: john.doe@example.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editTextMyNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Contact Number: +1 555-1234"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxNotifyMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="5sp"
            android:checked="false"
            android:text="Notify Me of New Cats"
            android:textColor="#244747"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="My Cats"
            android:textColor="#244747"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listViewMyCats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>