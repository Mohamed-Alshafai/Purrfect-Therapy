<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/newCatImage"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:visibility="gone"
            app:srcCompat="@drawable/cat_logo" />
    </LinearLayout>

    <EditText
        android:id="@+id/etNewCatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cat Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNewCatBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cat Breed"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNewCatPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Rent Price"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNewCatCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="City Location"
        android:textSize="20sp" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:fontFamily="@font/aclonica"
        android:inputType="textCapSentences"
        android:text="Select Image"
        android:textColor="@color/white_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/removeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:inputType="textCapSentences"
        android:text="Remove Image"
        android:textSize="16sp" />

</LinearLayout>